<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:a="http://schemas.android.com/apk/res/android"
  a:layout_width="fill_parent"
  a:layout_height="fill_parent"
  a:gravity="center"
  >
  
  <LinearLayout
  	a:orientation="vertical"
  	a:layout_width="486dp"
	a:layout_height="296dp"
	a:background="popup_bg_all.9"
	a:gravity="center">
		<LinearLayout
		  	a:layout_width="fill_parent"
			a:layout_height="wrap_content"
			a:gravity="center">
			<TextView
				a:id="name"
				a:nortext="T store 회원가입"
				a:nortext_eng="Register T store"
				a:layout_width="fill_parent"
				a:layout_height="40dp"
				a:textColor="#ffffff"
				a:shadowColor="#000000"
				a:textSize="30px"
				a:gravity="center"/>
		</LinearLayout>
		<LinearLayout 
			a:orientation="horizontal"
			a:layout_width="fill_parent"
		    a:layout_height="wrap_content"
		    a:paddingTop="6dp"
		    a:paddingleft="10dp">
			<LinearLayout 
				a:orientation="horizontal"
				a:layout_width="wrap_content"
			    a:layout_height="wrap_content"
			    a:layout_weight="1"
			    a:gravity="left"
			    >
			    <LinearLayout
			    	a:layout_width="wrap_content"
			    	a:layout_height="wrap_content"
			    	a:paddingleft="14dp">
			    <!-- 이용약관 이미지버튼-->
					<ImageView
						a:src="icon_title_01"
						a:layout_width="2dp"
						a:layout_height="21dp"/>
				</LinearLayout>
				<LinearLayout
			    	a:layout_width="wrap_content"
			    	a:layout_height="wrap_content"
			    	a:paddingleft="6dp">
					<TextView
					a:id="commonJoinFormName"
					a:layout_width="wrap_content"
					a:layout_height="wrap_content"
					a:text=""/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
			
  		
	<!-- 이용약관 내용 이미지 -->
		<LinearLayout 
				a:orientation="vertical"
				a:layout_width="415dp"
			    a:layout_height="132dp"
			    a:paddingTop="7dp"
			    a:layout_marginRight="10dp">
			    
			    <!-- text bg 분할한 것 넣기 -->
		  		<LinearLayout
		  			a:orientation="horizontal"
		  			a:layout_width="415dp"
		  			a:layout_height="8dp">
		  			<LinearLayout
			  			a:layout_width="8dp"
			  			a:layout_height="8dp"
			  			a:background="textbox_01_1"/>
		  			<LinearLayout
			  			a:layout_width="399dp"
			  			a:layout_height="8dp"
			  			a:background="textbox_01_2"/>
			  		<LinearLayout
			  			a:layout_width="8dp"
			  			a:layout_height="8dp"
			  			a:background="textbox_01_3"/>
		  		</LinearLayout>
		  		
		  		<LinearLayout
		  			a:orientation="horizontal"
		  			a:layout_width="415dp"
		  			a:layout_height="109dp">
		  			<LinearLayout
			  			a:layout_width="8dp"
			  			a:layout_height="119dp"
			  			a:background="textbox_01_4"/>
		  			<ScrollView
						a:layout_width="wrap_content"
						a:layout_height="wrap_content"
						a:orientation="vertical">
					  		<TextView
								a:id="commonJoinFormMessage"
								a:layout_width="399dp"
								a:layout_height="wrap_content"
								a:text=""
								a:textSize="23px"
								a:textColor="#999999"/>
					</ScrollView>
		  		<LinearLayout
		  			a:layout_width="8dp"
		  			a:layout_height="109dp"
		  			a:background="textbox_01_6"/>
	  		</LinearLayout>	 
	  		
	  		<LinearLayout
	  			a:orientation="horizontal"
	  			a:layout_width="415dp"
	  			a:layout_height="8dp">
	  			<LinearLayout
		  			a:layout_width="8dp"
		  			a:layout_height="8dp"
		  			a:background="textbox_01_7"/>
	  			<LinearLayout
		  			a:layout_width="399dp"
		  			a:layout_height="8dp"
		  			a:background="textbox_01_8"/>
		  		<LinearLayout
		  			a:layout_width="8dp"
		  			a:layout_height="8dp"
		  			a:background="textbox_01_9"/>
	  		</LinearLayout>   
  		</LinearLayout>
		
		
		<Button		
			a:layout_marginTop="9dp"
			a:layout_width="120dp" 
			a:layout_height="41dp"
			a:gravity="center"
			a:offImage_eng="btn_con_nor_e"
			a:onImage_eng="btn_con_sel_e"
			a:offImage="btn_con_nor" 
			a:onImage="btn_con_sel"		/>
	</LinearLayout>
</LinearLayout>
