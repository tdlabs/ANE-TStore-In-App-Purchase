					</LinearLayout>
					<!-- 2번째 약관 끝-->
					<!-- 3번째 약관 시작!! -->
					<LinearLayout 
						a:orientation="horizontal"
						a:layout_width="fill_parent"
					    a:layout_height="wrap_content">
						<LinearLayout 
							a:paddingTop="15dp"
							a:layout_width="wrap_content"
						    a:layout_height="wrap_content"
						    a:layout_weight="1"
						    a:gravity="left"
						    >
						    <!-- 이용약관 이미지버튼-->
							<ImageView
								a:src="icon_bullet"
								a:layout_width="wrap_content"
								a:layout_height="wrap_content"
									/>
						</LinearLayout>
						<LinearLayout 
							a:paddingTop="15dp"
					   		a:layout_width="wrap_content"
						    a:layout_height="wrap_content"
						    a:gravity="right"
						    a:layout_weight="1">
						   	<!-- 약관전체보기 버튼 -->
