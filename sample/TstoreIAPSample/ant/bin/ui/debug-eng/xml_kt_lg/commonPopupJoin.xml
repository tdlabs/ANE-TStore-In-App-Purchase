<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:a="http://schemas.android.com/apk/res/android"
  a:layout_width="fill_parent"
  a:layout_height="fill_parent"
  a:gravity="center">
  
  
  <LinearLayout
  	a:orientation="vertical"
  	a:layout_width="fill_parent"
	a:layout_height="fill_parent"
	a:background="popup_bg_all.9"
	a:gravity="center"
	a:layout_marginLeft="15dp">
 
	  <LinearLayout
	  	a:orientation="vertical"
	  	a:layout_width="wrap_content"
		a:layout_height="wrap_content">
		
	  <LinearLayout
	  	a:orientation="vertical"
	  	a:layout_marginLeft="6dp"	   					
		a:gravity="center"
		a:layout_width="fill_parent"
		a:layout_height="fill_parent"
		a:paddingBottom="10dp"
		>
		<ImageView
			a:src="pop_title"
			a:src_eng="pop_title_e"
			a:layout_width="wrap_content"
			a:layout_height="wrap_content"
			a:gravity="center"/>
		</LinearLayout>	
			
		<LinearLayout
	  	a:orientation="vertical"
	  	a:layout_width="wrap_content"
		a:layout_height="wrap_content"
		>
		
		<ScrollView
				a:layout_width="fill_parent"
				a:layout_height="320dp">	
				<LinearLayout
					a:orientation="vertical"
					a:layout_width="fill_parent"
					a:layout_height="fill_parent"
					>
					<!-- 1번째 약관 시작!! -->
					<LinearLayout 
						a:orientation="horizontal"
						a:layout_width="fill_parent"
					    a:layout_height="wrap_content">
						<LinearLayout 
							a:paddingTop="15dp"
							a:layout_width="wrap_content"
						    a:layout_height="wrap_content"
						    a:layout_weight="1"
						    a:gravity="left"
						    >
						    <!-- 이용약관 이미지버튼-->
							<ImageView
								a:src="icon_bullet"
								a:layout_width="wrap_content"
								a:layout_height="wrap_content"
									/>
						</LinearLayout>
						<LinearLayout 
					   		a:paddingTop="15dp"
					   		a:layout_width="wrap_content"
						    a:layout_height="wrap_content"
						    a:gravity="right"
						    a:layout_weight="1">
						   	<!-- 약관전체보기 버튼 -->
							<Button
								a:layout_width="90dp"
								a:layout_height="25dp"
								/>
						</LinearLayout>
					</LinearLayout>
					<!-- 이용약관 내용 이미지 -->		    
			  		<LinearLayout 
						a:orientation="horizontal"
						a:layout_width="wrap_content"
					    a:layout_height="wrap_content">		    
				  		<ImageView
				  			a:src="pop_btn_sel_ok"
				  			a:src_eng="pop_btn_sel_ok_e"
				  			a:layout_width="wrap_content"
				  			a:layout_height="wrap_content"
				  			/>
			  		</LinearLayout>
			  		
					
					<!-- 리니어 레이아웃 안에 체크박스랑 텍스트뷰 horizontal로 만들기 -->
					<LinearLayout 
						a:orientation="horizontal"	
						a:gravity="center"
						a:layout_width="wrap_content"
					    a:layout_height="wrap_content">
					    
					    <CheckBox
					    	a:checkid="info_checkbox1"
					    	a:layout_width="58dp"
					    	a:layout_height="30dp"
					    	a:onImage="btn_check_no_nor"/>
					    
					    <TextView
					    	a:id="JoinAgree"
							a:layout_width="fill_parent"
							a:layout_height="wrap_content"
							a:layout_marginLeft="10dp"
							a:layout_marginRight="10dp"
							a:textColor="#CFCFCF" 
							a:text="위의 이용약관에 동의합니다."
							a:text_eng="I accept the above terms and conditions."/>
					</LinearLayout>
					<!-- 1번째 약관 끝-->
