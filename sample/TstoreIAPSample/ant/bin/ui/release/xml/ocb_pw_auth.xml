<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="fill_parent"
    a:layout_height="fill_parent"
    a:gravity="center" >
    
    <!-- 전체 레이아웃 -->
    <LinearLayout  
		a:background="popup_bg_all_2.9"
		a:orientation="vertical"
		a:layout_width="296dp"
    	a:layout_height="291dp"
    	a:gravity="center">
        
        <!-- 타이틀 -->	
        <TextView
            a:layout_width="fill_parent"
            a:layout_height="43dp"
            a:gravity="center"
            a:text="OK캐쉬백 비밀번호"
            a:text_eng="OK cashbag Password"
            a:textSize="30px"
            a:textColor="#ffffff"/>
        <LinearLayout  
			a:background="title_line01"
			a:layout_width="262dp"
	    	a:layout_height="2dp"/>
        <ScrollView
            a:layout_width="286p"
            a:layout_height="175dp">
            <LinearLayout  
                a:orientation="vertical"
				a:layout_width="fill_parent"
		    	a:layout_height="wrap_content">
                <TextView
		            a:layout_width="fill_parent"
		            a:layout_height="wrap_content"
		            a:gravity="center" 
			    	a:layout_marginTop="24dp"
		            a:layout_marginBottom="29dp"
		           	a:text="OK캐쉬백 온라인 비밀번호(6~12자리) 또는\nOK캐쉬백 기프트카드 비밀번호를\n입력해주세요."
		           	a:text_eng="OK Cashbag online password (6-12 digits)\nor OK cash back gift card\nplease enter your password."
		            a:textSize="18px"
		            a:textColor="#999999"/>
                <LinearLayout
			        a:orientation="horizontal"
					a:layout_width="fill_parent"
				    a:layout_height="wrap_content"
				    a:layout_marginBottom="27dp"
	                a:focusableInTouchMode="true">
	                <TextView
			            a:layout_width="wrap_content"
			            a:layout_height="wrap_content"
			            a:layout_marginLeft="13dp"
			           	a:text="비밀번호"
			           	a:text_eng="Password"
			            a:textSize="18px"
			            a:textColor="#999999"/>
	                <EditText
	                	a:password="true"
	                    a:id ="OCBPWText"
                    	a:inputType="AlphaNum"
		                a:background="input_box_nor2.9"
		                a:layout_width="188dp"
				    	a:layout_height="30dp"
				    	a:layout_marginLeft="9dp"
				    	a:ocbTextColor=""
				    	a:maxLength="12"	/>
	            </LinearLayout>
            </LinearLayout>
            
        </ScrollView>
        <LinearLayout 
            a:orientation="horizontal"
			a:layout_width="fill_parent"
			a:layout_height="58dp"
			a:layout_marginBottom="2dp">
			<Button 
				a:id="cashbackOKButton"
			    a:layout_marginLeft="10dp"
				a:layout_width="131dp" 
				a:layout_height="41dp" 
				a:offImage_eng="btn_con_nor_e"
				a:onImage_eng="btn_con_sel_e"
				a:offImage="btn_con_nor" 
				a:onImage="btn_con_sel"/>
			<Button 
			    a:layout_marginLeft="6dp"
				a:layout_width="131dp" 
				a:layout_height="41dp" 
				a:offImage_eng="btn_cancel_nor_h_e" 
				a:onImage_eng="btn_cancel_sel_h_e"
				a:offImage="btn_cancel_nor_h" 
				a:onImage="btn_cancel_sel_h"/>
		</LinearLayout>
    
    </LinearLayout>

</LinearLayout>